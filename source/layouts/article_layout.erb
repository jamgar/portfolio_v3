<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Blog Title<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins">
    <link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-light-green.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag 'highlighting' %>
    <%= stylesheet_link_tag 'all' %>
  </head>
  <body>

    <%= partial 'layouts/article_navigation' %>

    <div class="article-main w3-padding-large w3-animate-opacity">
      <% if current_page.data.image %>
        <div id="banner" class="row">
          <%= tag :img, :src => current_page.data.image, class: "article-img center-block" %>
        </div>
      <% end %>
      <div class="w3-container">
        <div class="w3-row">
          <div class="w3-col l8 s12 article-content">
            <h1 class="text-center"><%= current_page.data.title %></h1>
            <p class="text-center"><small class="article-post-meta">Updated <%= time_ago_in_words(current_page.data.date) %> ago</small></p>
            <hr>
            <%= yield %>
          </div>

          <%= partial 'layouts/article_sidebar' %>
        </div><!-- /.row -->

        <%= partial 'layouts/disqus' %>

      </div><!-- /.container -->
      <script id="dsq-count-scr" src="//garciajames.disqus.com/count.js" async></script>
    </div>

    <%= partial 'layouts/article_footer' %>

<!-- Placed at the end of the document so the pages load faster -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
<%= javascript_include_tag "site" %>
</body>
</html>
