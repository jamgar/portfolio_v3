---
directory_index: false
pageable: true
per_page: 10
---

<div id="blog" class="w3-main  w3-animate-opacity">
  <h2 class="w3-center w3-padding-32">My Articles</h2>
  <% if paginate && num_pages > 1 %>
    <p>Page <%= page_number %> of <%= num_pages %></p>

    <% if prev_page %>
      <p><%= link_to 'Previous page', prev_page %></p>
    <% end %>
  <% end %>

  <% page_articles.each_with_index do |article, i| %>
    <div class="w3-card-2 w3-margin w3-white">
      <div class="w3-container">
        <h3><%= article.title %></h3>
        <small>Updated: <%= article.date.strftime('%m/%d/%y') %></small>
        <!-- use article.summary(250) if you have Nokogiri available to show just
             the first 250 characters -->
        <p><%= article.summary %><p>
        <%= link_to "READ MORE Â»", article, class: "w3-button w3-padding w3-white w3-border" %>
      </div>
    </div>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <p><%= link_to 'Next page', next_page %></p>
    <% end %>
  <% end %>
</div>
